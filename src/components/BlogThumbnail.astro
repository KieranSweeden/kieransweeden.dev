---
import FormattedDate from "./FormattedDate.astro";
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}/`} class="hover:text-zinc-100">
    <article class="flex columns-2">
        <div class="flex flex-col justify-between grow">
            <div>
                <h2 class="text-2xl">{post.data.title}</h2>
                <small class="text-zinc-400">{post.data.description}</small>
            </div>
            <FormattedDate date={post.data.pubDate} />
        </div>
        <div>
            <img width={360} height={180} src={post.data.heroImage} alt="" />
        </div>
    </article>
</a>
